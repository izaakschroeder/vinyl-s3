		"s3-url": "^0.2.2"
	},
	"devDependencies": {
		"eslint": "^0.22.1",
		"mocha": "^2.2.4",
		"istanbul": "^0.3.13",
		"chai": "^2.3.0",
		"chai-things": "^0.2.0",
		"sinon": "^1.12.2",
		"sinon-chai": "^2.7.0"
