	"license": "CC0-1.0",
	"homepage": "https://github.com/izaakschroeder/vinyl-s3",
	"repository": {
		"type": "git",
		"url": "https://github.com/izaakschroeder/vinyl-s3.git"
	},
	"main": "lib/s3.js",
	"scripts": {
